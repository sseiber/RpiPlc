{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ES2022",
        "sourceMap": true,
        "jsx": "react",
        "declaration": true,
        "declarationMap": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "compileOnSave": true,
    "include": [
        "eslint.config.mjs",
        "node-libgpiod.d.ts",
        "src/**/*.ts"
    ]
}